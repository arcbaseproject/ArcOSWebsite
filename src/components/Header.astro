<!-- AtlasOS-style: transparent header, logo wordmark left, nav center, social icons right -->
<header id="site-header" class="fixed top-0 left-0 right-0 z-50 h-16 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-8 h-full flex items-center justify-between">

    <a href="/">
      <img src="/text.png" class="w-20 h-20">
    </a>

    <!-- Center nav -->
    <nav class="hidden md:flex items-center gap-10" aria-label="Main navigation">
      <a href="#features" class="text-sm text-white/70 hover:text-white transition-colors">Features</a>
      <a href="#performance" class="text-sm text-white/70 hover:text-white transition-colors">Performance</a>
      <a href="/docs" class="text-sm text-white/70 hover:text-white transition-colors">Documentation</a>
    </nav>

    <!-- Social icons right -->
    <div class="flex items-center gap-3">
      <!-- GitHub -->
      <a href="https://github.com/criminas/arcos" target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-white transition-colors" aria-label="GitHub">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12Z"/>
        </svg>
      </a>
    </div>
  </div>
</header>

<script>
  // Add backdrop blur + subtle bg when scrolled (like AtlasOS)
  const header = document.getElementById('site-header');
  const onScroll = () => {
    if (window.scrollY > 40) {
      header?.classList.add('bg-[#020d1f]/80', 'backdrop-blur-md', 'border-b', 'border-white/[0.05]');
    } else {
      header?.classList.remove('bg-[#020d1f]/80', 'backdrop-blur-md', 'border-b', 'border-white/[0.05]');
    }
  };
  window.addEventListener('scroll', onScroll, { passive: true });
</script>
